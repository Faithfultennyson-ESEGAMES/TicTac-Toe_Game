# --- Server Configuration ---
PORT=3000

# --- Gameplay Rules ---
# The maximum number of turns before the game automatically ends in a draw.
MAX_TURNS=15

# --- Webhook Configuration ---
# A secret key for signing outgoing webhooks. Must be shared with webhook consumers.
HMAC_SECRET=your-super-secret-key

# A comma-separated list of URLs to send webhooks to.
WEBHOOK_ENDPOINTS=http://localhost:4000/webhook

# --- Webhook Retry & DLQ --- 
# The total number of delivery attempts (1 initial + N retries).
MAX_WEBHOOK_ATTEMPTS=3

# A comma-separated list of delays (in ms) between retry attempts.
# The number of entries should be (MAX_WEBHOOK_ATTEMPTS - 1).
RETRY_SCHEDULE_MS=1000,5000

# The password to protect the DLQ admin endpoints (/admin/dlq).
DLQ_PASSWORD=your-secure-dlq-password

# --- Logging --- 
# The time-to-live for session log files on disk, in milliseconds.
# Defaults to 3600000 (1 hour).
SESSION_LOG_TTL_MS=3600000

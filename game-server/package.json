{
  "name": "game-server",
  "version": "1.0.0",
  "description": "Phase 1 authoritative Tic-Tac-Toe game server with matchmaking and timers",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": ["src/**/*.js"],
    "coveragePathIgnorePatterns": ["/node_modules/", "src/server.js", "src/utils/logger.js"]
  }
}
